<div class="col-md-12">
                        <% if current_user_has_quotations_as_seller %>

              <div class="card">
                <div class="card-header card-header-rose card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">assignment</i>
                  </div>
                  <h4 class="card-title">Pedidos Recebidos</h4>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th class="text-center">Data</th>
                          <th>Cliente</th>
                          <th>Pedido do cliente</th>
                          <th>Cotação Enviada</th>                          
                          <th class="text-right">Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                      	<% for quotation_as_seller in @quotations_as_seller %>
                        <tr>
                          <td class="text-center">1</td>
                          <td><%= customer_name quotation_as_seller%></td>
                          <td><%= quotation_as_seller.senter_message %></td>
                          <td><%= quotation_as_seller.quote %></td>                          
                          <td class="td-actions text-right">
                            <button type="button" rel="tooltip" class="btn btn-info" data-original-title="" title="">
                              <i class="material-icons">person</i>
                            </button>
                            <button type="button" rel="tooltip" class="btn btn-success" data-original-title="" title="">
                              <%= link_to ("<i class='material-icons'>edit</i>").html_safe, edit_quotation_path(id: quotation_as_seller, category_id: quotation_as_seller.category_id),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}%>
                            </button>
                            <button type="button" rel="tooltip" class="btn btn-danger" data-original-title="" title="">
                              <i class="material-icons">close</i>
                            </button>
                          </td>
                        </tr>
                        <% end %>


                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
                        <% end %>





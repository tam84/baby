<div class="col-md-12">
  <div class="card ">
    <div class="card-header card-header-rose card-header-icon">
    <%= form_for quotations_path, method: :get  do |f| %>
        <div class="form-group">
        <%= f.label :body, "Escreve sua mensagem" %>

        <%= f.select :search, options_for_senter_message, :prompt => 'Select One' %>


        </div>
        <%= f.submit "Enviar", class: 'btn btn-rose btn-sm' %>
      <% end %>
    </div>
  </div>
</div>


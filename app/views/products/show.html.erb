



<div class="container-fluid">
	<div class="row">

				<%= render @product_associates %>

        <div class="col-md-12">
            <div class="card ">
              <div class="card-body ">

                  <p>Não encontrou quem deseja? Envie uma mensagem para toda a equipe</p>
                  <button type="button" rel="tooltip" class="btn btn-round" style="background-color: gray"data-original-title="" title="">
                  <%= link_to ("Enviar mensagem para toda a equipe do produto ").html_safe, new_email_message_path(product_id: @product, product_associates: @product_associates.pluck(:user_id)),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', :style=>'color:#FFFFFF;'}%>
                  </button>         
                </div>
              </div>
            </div>
        	
       	<div class="col-md-12">
              <div class="card ">

				<div class="card-header card-header-rose card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">mail_outline</i>
                  </div>
                  <h4 class="card-title">+Info</h4>
                </div>

                <div class="card-body ">
					<% if @product != nil %>
              		<div class="card ">				
						<%= @product.name %>
					</div>

						<%= @product.description.html_safe %>

					<%end%>
                </div>	

              </div>
        </div> 





       	<div class="col-md-12">
              <div class="card ">

				<div class="card-header card-header-rose card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">mail_outline</i>
                  </div>
                  <h4 class="card-title">Fotos</h4>
         </div>

 		       	<div class="row">
        	
          <div class="col-md-12">
						<% @product.images.each do |image| %>
            <% if image.previewable? %>

              <%= link_to image.filename, rails_blob_path(image, disposition: "attachment"), class: "col-md-3" %>


            <% else %>
						<%= link_to image_tag(image.variant(resize: "200x200!")), rails_blob_path(image, disposition: "attachment"), class: "col-md-3" %>

            <% end %>
						<% end %>
          </div>

        		</div>
        	</div>          
        </div>




        <div class="col-md-12">
              <div class="card ">

        <div class="card-header card-header-rose card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">mail_outline</i>
                  </div>
                  <h4 class="card-title">Documentos</h4>
         </div> </br>

            <div class="row">
          
          <div class="col-md-12">
            <% @product.documents.each do |document| %>

            <%= link_to document.filename, rails_blob_path(document, disposition: "attachment" ), class: "col-md-3", style: "color: gray; font-weight: bold" %>

            <% end %>
          </div> 


          <div class="card">
          </div>


            </div>
          </div>          
        </div>



<% if current_user_is_product_associate @product, current_user.id %>
  <%= render :partial => 'posts/form' %>
<% end %>


<div class="col-md-12">
  <div class="card " style='background-color: #f2f2f2'>
    <div class="card-header card-header-rose card-header-icon">
      <div class="card-icon">
        <i class="material-icons">mail_outline</i>
      </div>
      <h4 class="card-title">Atualizações</h4>
    </div>


    <%= render @product.posts.last(10) %>

    <div class="col-md-12", style="font-size: 20px">
      <%= link_to "ver todas as atualizações", posts_path(postable_type: controller.controller_name.first(-1).capitalize, postable_id: @product) %>
    </div>

  </div>
</div>














	</div>
</div>




		















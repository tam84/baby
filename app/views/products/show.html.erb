<% if current_user and current_user.firm == @product.firm || current_user == User.first %>
<div class="col-md-12">
  <div class="card ">
    <div class="card-header card-header-rose card-header-icon">
      <div class="card-icon">
        <i class="material-icons">mail_outline</i>
      </div>
      <h4 class="card-title">Exclusivo para os Administradores do produto</h4>

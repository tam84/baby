<div class="col-md-12"> 
	<div class="card "> 
		<div class="card-header card-header-rose card-header-icon">
		<%= form_with model: @product, local: true do |f| %>
            <% @product.errors.full_messages.each do |message| %>
                <li>
                    <%= link_to message %>
                </li>
            <% end %>
  			<div class="form-group">
    		
            <%= f.label :view_status, "Confidencial ou público" %><br/>
            <%= f.select :view_status, Product.view_statuses.keys %><br/> <br/>     


            <%= f.label :category_id, "Cargo" %><br/>
            <%= f.select :category_id, options_for_select(Category.all.collect { | category | [category.name, category.id] }), :prompt => 'Selecione o tipo de investimento' %><br/> <br/>     

            <%= f.label :firm_id, "Empresa" %><br/>
            <%= f.select :firm_id, options_for_select(Firm.all.order(name: "asc").collect { | firm | [firm.name, firm.id] }), :prompt => 'Selecione a empresa proprietária do produto' %><br/> <br/>    

            <%= f.label :name, "Título da Vaga" %>
            <%= f.text_area :name, class: 'form-control' %> <br />                                  

            <%= f.label :description, "Descrição da Vaga" %>
            <%= f.text_area :description, rows: 25, cols: 25, class: "tinymce", style: "height:500px" %> <br />                                 


 		    		    		    			

            <%= f.label :street_name, "Nome da Rua" %>
            <%= f.text_area :street_name, class: 'form-control' %>                             

            <%= f.label :street_number, "Número da Rua" %>
            <%= f.text_area :street_number, class: 'form-control' %>

            <%= f.label :room_number, "Complemento" %>
            <%= f.text_area :room_number, class: 'form-control' %>                            


            <%= f.label :neighborhood, "Bairro" %>
            <%= f.text_area :neighborhood, class: 'form-control' %>                             

            <%= f.label :zip_code, "CEP" %>
            <%= f.text_area :zip_code, class: 'form-control' %>                             


            <%= f.label :city, "Cidade" %><br/>
            <%= f.select :city, options_for_select(list_of_cities), :prompt => 'Selecione a cidade' %><br/> <br/>     
				


    		<div class= "field" >
    		<%= f.label :images, "Selecione as imagens do produto" %>
    		<%= f.file_field :images, multiple: true, class: 'form-control' %> <br />    		    	
    		</div>	

  




  			<%= f.submit "Enviar", class: 'btn btn-rose btn-sm' %>
			<% end %>
		</div>
	</div>
</div>




<%= tinymce %>

